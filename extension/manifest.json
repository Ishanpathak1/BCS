{
  "manifest_version": 3,
  "name": "Blockchain Comment System",
  "version": "1.2",
  "description": "Decentralized comment system for websites with multi-wallet support.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/BlockchainCommentIcon_16x16.png",
      "48": "images/BlockchainCommentIcon_48x48.png",
      "128": "images/BlockchainCommentIcon_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "images/BlockchainCommentIcon_16x16.png",
    "48": "images/BlockchainCommentIcon_48x48.png",
    "128": "images/BlockchainCommentIcon_128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/BlockchainCommentIcon_16x16.png",
        "images/BlockchainCommentIcon_48x48.png",
        "images/BlockchainCommentIcon_128x128.png",
        "images/your-logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}


  
  
  
  
  